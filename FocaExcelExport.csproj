<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{1B0D8A0D-2EB5-4A5A-8A0D-8A0D8A0D8A0D}</ProjectGuid>
    <OutputType>Library</OutputType>
    <RootNamespace>FocaExcelExport</RootNamespace>
    <AssemblyName>FocaExcelExport</AssemblyName>
    <TargetFrameworkVersion>v4.7.1</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <Deterministic>true</Deterministic>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>plugin\ExportExcel\</OutputPath>
    <DefineConstants>DEBUG;TRACE;FOCA_API</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>plugin\ExportExcel\</OutputPath>
    <DefineConstants>TRACE;FOCA_API</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup>
    <StartupObject />
  </PropertyGroup>
  <PropertyGroup>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Configuration" />
    <Reference Include="System.Data" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.IO.Compression" />
    <Reference Include="System.IO.Compression.FileSystem" />
    <Reference Include="System.Security" />
    <Reference Include="WindowsBase" />
    <Reference Include="PluginsAPI">
      <HintPath>lib\PluginsAPI.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="Classes\ConnectionResolver.cs" />
    <Compile Include="Classes\AssemblyResolver.cs" />
    <Compile Include="Classes\Exporter.cs" />
    <Compile Include="Classes\ExcelComparer.cs" />
    <Compile Include="Classes\SchemaResolver.cs" />
    <Compile Include="Forms\ExportDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Include="Forms\ExportDialog.Designer.cs">
      <DependentUpon>ExportDialog.cs</DependentUpon>
    </Compile>
    <Compile Include="Forms\CompareDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Include="Forms\CompareDialog.Designer.cs">
      <DependentUpon>CompareDialog.cs</DependentUpon>
    </Compile>
    <Compile Include="Ui\MainControl.cs" />
    <Compile Include="Plugin.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ClosedXML">
      <Version>0.95.4</Version>
    </PackageReference>
    <PackageReference Include="DocumentFormat.OpenXml">
      <Version>2.12.3</Version>
    </PackageReference>
    <PackageReference Include="ExcelNumberFormat">
      <Version>1.1.0</Version>
    </PackageReference>
    <PackageReference Include="System.IO.Packaging">
      <Version>4.7.0</Version>
    </PackageReference>
    <PackageReference Include="Fody">
      <Version>6.8.0</Version>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Costura.Fody">
      <Version>5.7.0</Version>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <!-- Ensamblado único con Costura (no copiamos dependencias a lib/) -->
  <Target Name="RemoveLibFolder" AfterTargets="Build">
    <RemoveDir Directories="$(OutDir)lib" Condition="Exists('$(OutDir)lib')" />
  </Target>
  <!-- Copia del DLL a plugin con reintentos por si hay bloqueo momentáneo -->
  <Target Name="CopyPluginWithRetry" AfterTargets="Build">
    <ItemGroup>
      <BuiltDll Include="$(TargetPath)" />
    </ItemGroup>
    <Copy SourceFiles="@(BuiltDll)"
          DestinationFolder="$(OutputPath)"
          Retries="5"
          RetryDelayMilliseconds="1000"
          SkipUnchangedFiles="true" />
  </Target>
  <ItemGroup>
    <None Include="app.config" Condition=" '$(Configuration)' == 'Debug' " />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="img\icon.png" />
    <EmbeddedResource Include="img\export.png" Condition="Exists('img\export.png')" />
    <EmbeddedResource Include="img\exit.png" Condition="Exists('img\exit.png')" />
    <EmbeddedResource Include="img\open.png" Condition="Exists('img\open.png')" />
    <EmbeddedResource Include="img\comparar.png" Condition="Exists('img\comparar.png')" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <!-- En Release solo limpiamos PDB y config del propio plugin; dejamos las DLL de dependencias (ClosedXML, etc.) -->
  <Target Name="PruneReleaseOutputs" AfterTargets="Build" Condition=" '$(Configuration)' == 'Release' ">
    <ItemGroup>
      <FilesToDelete Include="$(OutDir)FocaExcelExport.pdb"
                     Condition="Exists('$(OutDir)FocaExcelExport.pdb')" />
      <FilesToDelete Include="$(OutDir)FocaExcelExport.dll.config"
                     Condition="Exists('$(OutDir)FocaExcelExport.dll.config')" />
    </ItemGroup>
    <Delete Files="@(FilesToDelete)" ContinueOnError="true" />
  </Target>
  <!-- Eliminamos siempre ClosedXML.pdb del directorio de salida del plugin (plugin\ExportExcel\) -->
  <Target Name="RemoveClosedXmlPdb" AfterTargets="Build">
    <ItemGroup>
      <FilesToDeleteClosedXml Include="$(OutDir)ClosedXML.pdb"
                              Condition="Exists('$(OutDir)ClosedXML.pdb')" />
    </ItemGroup>
    <Delete Files="@(FilesToDeleteClosedXml)" ContinueOnError="true" />
  </Target>
</Project>